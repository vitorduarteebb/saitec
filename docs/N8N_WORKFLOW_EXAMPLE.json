    {
      "parameters": {
        "jsCode": "// Filtros adicionais opcionais\nconst items = $input.item.json.data || [];\n\n// Blacklist adicional (se necessário)\nconst blacklist = ['palavra1', 'palavra2'];\n\nconst filtered = items.filter(i => {\n  const text = (i.title + ' ' + (i.description || '')).toLowerCase();\n  return !blacklist.some(b => text.includes(b));\n});\n\nreturn filtered.map(i => ({ json: i }));"
      },
